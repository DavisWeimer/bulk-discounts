<%= render partial: "shared/nav" %>


<body>
  <div class="row">
    <p class='col-12'>My Bulk Discounts</p>
  </div>

  <p><%= link_to "Create New Discount", new_merchant_bulk_discount_path(@merchant) %></p>

  <div class="row">
    <div class="col-sm-6">
      <div class="column-header">
        <p>Bulk Discounts</p>
      </div>

      <ul>
        <section id="bulk_discounts">
          <% @bulk_discounts.each do |discount| %>
            <section id="discount-<%= discount.id %>">
              <p>Percentage: -<%= discount.percentage_converted %>% off</p>
              <p>Minimum Quantity: <%= discount.minimum_quantity %></p>
              <%= button_to "Show Page", merchant_bulk_discount_path(@merchant.id, discount.id), method: :get %>
              <%= button_to "Delete", merchant_bulk_discount_path(@merchant.id, discount.id), method: :delete %>
            </section>
          <% end %>
        </section>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <div class="column-header">
        <p>Upcoming Holidays</p>
      </div>
      <ol>
        <section id="upcoming_holidays">
          <% @upcoming_holidays.each do |holiday| %>
            <li><%= holiday.first %></li>
            <p><%= holiday.last %></p>
          <% end %>
        </section>
      </ol>
    </div>  
  </div>    
</body>
